    "SignupInput": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "required": true
        },
        "password": {
          "type": "string",
          "required": true
        },
        "role": {
          "type": "string",
          "enum": ["bus", "admin"],
          "required": true
        },
        "busId": {
          "type": "integer",
          "required": true
        }
      }
