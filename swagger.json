          },
          "required": true
        }
      }
    },
    "BusStopInput": {
      "type": "object",
      "properties": {
        "busStopName": {
          "type": "string",
          "required": true
        },
        "coordinate": {
          "type": "string",
          "required": true
        },
        "sector": {
          "type": "string",
          "required": true
        },
        "district": {
          "type": "string",
          "required": true
        }
      }
    },
    "BusInput": {
